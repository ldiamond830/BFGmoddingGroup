version "4.9.1"
//main file + monster definitions
#include "ammo"
#include "weapons"
Class BigZombieman : Zombieman
{
    Default
    {
        health 1000;
        scale 2;
        radius 40;
        height 40;
    }
}



Class IceEnemy : LostSoul {
Default{
-FLOAT
Obituary "%o was frozen to death";
}
}

Class IceGolem : Actor{
Default
	{
		Health 4000;
		Radius 40;
		Height 110;
		Mass 1000;
		Speed 16;
		PainChance 20;
		Monster;
		MinMissileChance 160;
		+BOSS 
		+MISSILEMORE
		+FLOORCLIP
		+NORADIUSDMG
		+DONTMORPH
		+BOSSDEATH
		SeeSound "cyber/sight";
		PainSound "cyber/pain";
		DeathSound "cyber/death";
		ActiveSound "cyber/active";
		Obituary "player was shattered by the Ice Golem";
		Tag "$FN_CYBER";
	}
	States
	{
	Spawn:
		CYBR AB 10 A_Look;
		Loop;
	See:
		CYBR A 3 A_Hoof;
		CYBR ABBCC 3 A_Chase;
		CYBR D 3 A_Metal;
		CYBR D 3 A_Chase;
		Loop;
	Missile:
		CYBR E 6 A_FaceTarget;
		CYBR F 12 A_SpawnProjectile("IcicleProjectile");
		CYBR E 12 A_FaceTarget;
		CYBR F 12 A_SpawnProjectile("IcicleProjectile");
		CYBR E 12 A_FaceTarget;
		CYBR F 12 A_SpawnProjectile("IcicleProjectile");
		Goto See;
	Pain:
		CYBR G 10 A_Pain;
		Goto See;
	Death:
		CYBR H 10;
		CYBR I 10 A_Scream;
		CYBR JKL 10;
		CYBR M 10 A_NoBlocking;
		CYBR NO 10;
		CYBR P 30;
		CYBR P -1 A_BossDeath;
		Stop;
	}
}




